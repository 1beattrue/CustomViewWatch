<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <edu.mirea.onebeattrue.customviewwatch.CustomWatch
        style="@style/CustomWatchStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:hasNumbers="true"
        app:hasSeconds="true"
        app:shape="square"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <edu.mirea.onebeattrue.customviewwatch.CustomWatch
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="8dp"
        app:hasNumbers="true"
        app:hasSeconds="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mainColor="@color/black" />

    <edu.mirea.onebeattrue.customviewwatch.CustomWatch
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="8dp"
        app:hasNumbers="false"
        app:hasSeconds="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mainColor="@color/vk_color" />

    <edu.mirea.onebeattrue.customviewwatch.CustomWatch
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="8dp"
        app:hasNumbers="false"
        app:hasSeconds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:mainColor="@color/black" />

    <edu.mirea.onebeattrue.customviewwatch.CustomWatch
        android:layout_width="256dp"
        android:layout_height="512dp"
        app:backgroundColor="@color/vk_color"
        app:hasNumbers="true"
        app:hasSeconds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mainColor="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>